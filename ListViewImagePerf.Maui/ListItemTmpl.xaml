<?xml version="1.0" encoding="utf-8" ?>

<Grid Padding="8,5" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ListViewImagePerf.Maui.ListItemTmpl">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Image x:Name="img"
                HorizontalOptions="Center" VerticalOptions="Center"
                        Aspect="AspectFill"
        WidthRequest="75" HeightRequest="75" />

    <StackLayout Grid.Column="1"
                   Padding="4"
                   Spacing="2"
                   VerticalOptions="Center">
        <Label Text="{Binding Location}" FontSize="Small" FontAttributes="Bold"   TextColor="#547799" LineBreakMode="TailTruncation" />
    </StackLayout>
</Grid>